{
  "manifest_version": 3,
  "name": "Humble AI Chat Assistant",
  "version": "1.0",
  "description": "A Chrome extension that provides a chat assistant powered by Humble AI",
  "permissions": ["storage", "commands", "contextMenus", "notifications", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "mac": "Command+Shift+Space"
      },
      "description": "Open Humble AI Chat Assistant"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}
